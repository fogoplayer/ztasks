{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "./",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/task/**",
        "function": "getTaskWithSubtasks"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
